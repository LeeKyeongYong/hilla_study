{
  "extends": [
    "vaadin/typescript-requiring-type-checking",
    "vaadin/imports-typescript",
    "vaadin/testing",
    "vaadin/prettier"
  ],
  "ignorePatterns": ["packages/ts/*/*.js", "packages/ts/*/*.d.ts", "packages/ts/*/test/**/*.snap.ts"],
  "plugins": ["chai-friendly"],
  "rules": {
    "max-params": "off"
  }
}
