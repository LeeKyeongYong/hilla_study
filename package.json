{
  "name": "@hilla/hilla",
  "private": true,
  "description": "Hilla frontend & NodeJS code",
  "main": "index.js",
  "type": "module",
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0",
    "npm": ">=7"
  },
  "workspaces": [
    "packages/ts/*"
  ],
  "scripts": {
    "check": "concurrently npm:lint npm:typecheck",
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build --include-dependencies",
    "lint": "lerna run lint",
    "postinstall": "npm run bootstrap",
    "test": "lerna run test",
    "test:coverage": "lerna run test:coverage",
    "typecheck": "lerna run typecheck"
  },
  "repository": {
    "type": "git",
    "url": "github.com/vaadin/hilla"
  },
  "author": "Vaadin Ltd",
  "license": "Apache-2.0",
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@web/dev-server-esbuild": "^0.2.14",
    "@web/dev-server-import-maps": "^0.0.6",
    "@web/test-runner-chrome": "^0.10.2",
    "@web/test-runner-puppeteer": "^0.10.5",
    "concurrently": "^6.2.1",
    "eslint": "^8.35.0",
    "eslint-config-vaadin": "file:../eslint-config-vaadin/eslint-config-vaadin-1.0.0-alpha.11.tgz",
    "lerna": "^4.0.0",
    "lint-staged": "^13.0.3",
    "meow": "^10.1.5",
    "micromatch": "^4.0.4",
    "prettier": "^2.7.1",
    "simple-git-hooks": "^2.6.1",
    "tslib": "^2.5.0",
    "tsx": "^3.12.3",
    "typescript": "^4.9.4"
  },
  "overrides": {
    "tslib": "$tslib"
  }
}
